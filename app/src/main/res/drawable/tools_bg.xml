<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/_e0e0e0"></solid>
            <corners
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip">
            </corners>

        </shape>
    </item>
    <item android:top="2px" android:bottom="2px" android:left="2px" android:right="2px">
        <shape android:shape="rectangle">
            <solid android:color="@color/_4a8de6"></solid>
            <corners
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip">
            </corners>
        </shape>
    </item>

</layer-list>