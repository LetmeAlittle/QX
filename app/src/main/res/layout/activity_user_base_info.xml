<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/_ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px"
        android:background="@drawable/app_top_title_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/top_back_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sex_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_35px"
                android:src="@mipmap/top_back_iv"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_52px"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/id_select_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/id_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_35px"
                android:src="@mipmap/more_iv"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_100px"
        android:paddingRight="@dimen/_100px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_60px"
            android:layout_marginTop="@dimen/_80px"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="@dimen/_375px"
                android:layout_height="@dimen/_375px"
                android:layout_centerHorizontal="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_head_icon_iv"
                    android:layout_width="@dimen/_300px"
                    android:layout_height="@dimen/_300px"
                    android:src="@mipmap/user_default_icon"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120px"
            android:layout_marginTop="@dimen/_60px"
            android:background="@drawable/fill_bg_f4f8f9_yj"
            android:padding="@dimen/_35px">

            <ImageView
                android:id="@+id/nick_name_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/phone_iv"/>

            <ImageView
                android:id="@+id/nick_name_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/del_white_bg_del"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/nick_name_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_35px"
                android:layout_marginRight="@dimen/_35px"
                android:layout_toLeftOf="@id/nick_name_clear_iv"
                android:layout_toRightOf="@id/nick_name_iv"
                android:background="@null"
                android:hint="请输入昵称"
                android:singleLine="true"
                android:textColor="@color/_576066"
                android:textColorHint="@color/_dbdfe1"
                android:textSize="@dimen/_45px"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120px"
            android:layout_marginTop="@dimen/_60px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/body_ll"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/_417BFE"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sex_boy_iv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_45px"
                    android:text="男"
                    android:textColor="@color/_ffffff"
                    android:textSize="@dimen/_50px"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/girl_ll"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/_dbdfe1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sex_girl_iv"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_45px"
                    android:text="女"
                    android:textColor="@color/_ffffff"
                    android:textSize="@dimen/_50px"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:textSize="@dimen/_35px"
            android:layout_marginTop="@dimen/_15px"
            android:textColor="@color/_F0F2F5"
            android:layout_width="wrap_content"
            android:text="性别一旦设置后期无法修改！"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/finish_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120px"
            android:layout_marginTop="@dimen/_100px"
            android:background="@drawable/fill_bg_9b5ada_yj"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_55px"/>
    </LinearLayout>
</LinearLayout>