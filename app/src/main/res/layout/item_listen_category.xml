<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_2A273C"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_30px"
    android:paddingRight="@dimen/_30px">

        <LinearLayout
        android:id="@+id/listen_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_60px"
        android:layout_marginTop="@dimen/_80px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/random_listen_iv"
                android:layout_width="@dimen/_250px"
                android:layout_height="@dimen/_250px"
                android:src="@mipmap/user_default_icon" />

            <TextView
                android:id="@+id/listen_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="随机偷听"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_40px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/call_iv"
                android:layout_width="@dimen/_50px"
                android:layout_height="@dimen/_50px"
                android:src="@color/_ffffff" />

            <TextView
                android:id="@+id/need_gold_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_30px"
                android:text="6钻石/分钟"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_45px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/show_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45px"
        android:background="@color/_2A273C"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fill_bg_gray_5c3c6d_yj"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_35px"
        android:paddingTop="@dimen/_35px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_35px"
            android:paddingRight="@dimen/_35px">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/man_call_iv"
                android:layout_width="@dimen/_180px"
                android:layout_height="@dimen/_180px"
                android:layout_centerVertical="true"
               />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/women_call_iv"
                android:layout_width="@dimen/_180px"
                android:layout_height="@dimen/_180px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_60px"
                android:layout_toRightOf="@id/man_call_iv"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_90px"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/zan_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/steal_zan_iv" />

                    <TextView
                        android:id="@+id/zan_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15px"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/steal_listen_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/steal_ting_iv" />

                    <TextView
                        android:id="@+id/steal_listen_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15px"
                        android:gravity="center"
                        android:text="15:30"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginTop="@dimen/_30px"
            android:background="@color/_8851B3" />

        <com.ttt.qx.qxcall.widget.FlowLayout
            android:id="@+id/flow_tag_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_30px"
            android:layout_height="wrap_content"
            ></com.ttt.qx.qxcall.widget.FlowLayout>
    </LinearLayout>
</LinearLayout>