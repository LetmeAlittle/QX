<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px"
        android:background="@drawable/app_top_title_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/top_back_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sex_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_35px"
                android:src="@mipmap/back_left_white"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_52px"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/id_select_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/id_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_35px"
                android:src="@mipmap/more_iv"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_100px"
        android:paddingRight="@dimen/_100px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120px"
            android:layout_marginTop="@dimen/_60px"
            android:paddingLeft="@dimen/_35px"
            android:paddingRight="@dimen/_35px"
            >

            <ImageView
                android:id="@+id/content_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/del_white_bg_del"
                android:tint="@color/loginUsernameColor"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15px"
                android:layout_marginRight="@dimen/_35px"
                android:layout_toLeftOf="@id/content_clear_iv"
                android:background="@null"
                android:hint="请输入昵称"
                android:paddingBottom="@dimen/_20px"
                android:paddingTop="@dimen/_20px"
                android:singleLine="true"
                android:textColor="@color/loginUsernameColor"
                android:textColorHint="@color/loginUsernameColor"
                android:textSize="@dimen/_45px"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/_666666"
            />

        <TextView
            android:id="@+id/finish_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_100px"
            android:background="@drawable/activity_register_button_click"
            android:gravity="center"
            android:padding="10dp"
            android:text="保存"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
</LinearLayout>