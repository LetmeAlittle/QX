<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorBackground"
              android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gift_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/bottom_send_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        android:padding="@dimen/_15px">

        <ImageView
            android:id="@+id/zuanshi_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/pengpengdou_small"/>

        <TextView
            android:id="@+id/gift_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15px"
            android:layout_toRightOf="@id/zuanshi_iv"
            android:text=""
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/send_tv"
            android:layout_width="@dimen/_180px"
            android:layout_height="@dimen/_80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/activity_register_button_click"
            android:gravity="center"
            android:text="赠送"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/middle_size"/>
    </RelativeLayout>

</LinearLayout>