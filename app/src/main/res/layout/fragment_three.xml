<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/public_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.ysxsoft.qxerkai.view.widget.MultipleStatusView
            android:id="@+id/multipleStatusView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:emptyView="@layout/custom_empty_view"
            app:errorView="@layout/custom_error_view"
            app:loadingView="@layout/custom_loading_view"
            app:noNetworkView="@layout/custom_no_network_view">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/iv_zhuanshupipei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/fragment_three_top_bg"
                            />

                        <ImageView
                            android:id="@+id/circle_waiwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/fragment_three_top_circle"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/fragment_three_top_kuang"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingLeft="50dp"
                            android:paddingRight="45dp"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@mipmap/pengpengdou_small"
                                    android:text="100豆"
                                    android:textColor="@color/loginUsernameColor"
                                    android:textSize="@dimen/small_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:text="为心动的人开守护"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="7天"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/normal_size"/>

                                <TextView
                                    android:id="@+id/tv_kaitong1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fragment_three_kaitong_bg"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="5dp"
                                    android:text="点击开通"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_size"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@mipmap/pengpengdou_small"
                                    android:text="200豆"
                                    android:textColor="@color/loginUsernameColor"
                                    android:textSize="@dimen/small_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:text="为心动的人开守护"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="半个月"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/normal_size"/>

                                <TextView
                                    android:id="@+id/tv_kaitong2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fragment_three_kaitong_bg"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="5dp"
                                    android:text="点击开通"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_size"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableTop="@mipmap/pengpengdou_small"
                                    android:text="300豆"
                                    android:textColor="@color/loginUsernameColor"
                                    android:textSize="@dimen/small_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:text="为心动的人开守护"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/normal_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="一个月"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/normal_size"/>

                                <TextView
                                    android:id="@+id/tv_kaitong3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/fragment_three_kaitong_bg"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="5dp"
                                    android:text="点击开通"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/small_size"/>

                            </LinearLayout>


                        </LinearLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="角 色 扮 演"
                            android:textColor="@color/white"
                            android:textSize="@dimen/lager_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:text="10砰砰豆/次"
                            android:textColor="@color/white"
                            android:textSize="@dimen/small_size"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:id="@+id/riv_banyan1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/fragment_three_item_1"/>

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:id="@+id/riv_banyan2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/fragment_three_item_2"/>

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:id="@+id/riv_banyan3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/fragment_three_item_3"/>

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:id="@+id/riv_banyan4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/fragment_three_item_4"/>

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:id="@+id/riv_banyan5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/fragment_three_item_5"/>

                        <com.ysxsoft.qxerkai.view.widget.ResizableImageView
                            android:id="@+id/riv_banyan6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:src="@mipmap/fragment_three_item_6"/>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </com.ysxsoft.qxerkai.view.widget.MultipleStatusView>
    </LinearLayout>
</LinearLayout>