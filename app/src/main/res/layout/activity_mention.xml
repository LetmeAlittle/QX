<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px"
        android:background="@drawable/app_top_title_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/top_back_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sex_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_35px"
                android:src="@mipmap/top_back_iv" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_52px" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/id_select_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/id_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_35px"
                android:src="@mipmap/more_iv" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_120px"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_60px"
                android:paddingRight="@dimen/_60px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝账号"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_50px" />

                    <EditText
                        android:id="@+id/alipay_num_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120px"
                        android:layout_marginLeft="@dimen/_45px"
                        android:background="@drawable/fill_bg_8682a1_yj"
                        android:hint="请输入支付宝账号"
                        android:paddingLeft="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:singleLine="true"
                        android:textColor="@color/_ffffff"
                        android:textColorHint="@color/_bcbaca"
                        android:textSize="@dimen/_45px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实姓名    "
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_50px" />

                    <EditText
                        android:id="@+id/real_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120px"
                        android:layout_marginLeft="@dimen/_45px"
                        android:background="@drawable/fill_bg_8682a1_yj"
                        android:hint="请输入真实姓名"
                        android:paddingLeft="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:singleLine="true"
                        android:textColor="@color/_ffffff"
                        android:textColorHint="@color/_bcbaca"
                        android:textSize="@dimen/_45px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_60px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="输入金额    "
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_50px" />

                    <EditText
                        android:id="@+id/mention_money_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120px"
                        android:layout_marginLeft="@dimen/_45px"
                        android:background="@drawable/fill_bg_8682a1_yj"
                        android:hint="提现金额不得低于100元"
                        android:inputType="numberDecimal"
                        android:paddingLeft="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:singleLine="true"
                        android:textColor="@color/_ffffff"
                        android:textColorHint="@color/_bcbaca"
                        android:textSize="@dimen/_45px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_100px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可提额度  ￥"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_35px" />

                    <TextView
                        android:id="@+id/remain_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_35px" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30px"
                android:layout_marginTop="@dimen/_45px"
                android:background="@color/colorBackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/zero_dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/submit_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120px"
                        android:layout_marginLeft="@dimen/_60px"
                        android:layout_marginRight="@dimen/_60px"
                        android:layout_marginTop="@dimen/_100px"
                        android:background="@drawable/fill_bg_9b5ada_yj"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_55px" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_60px"
                android:paddingLeft="@dimen/_60px"
                android:paddingRight="@dimen/_60px">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="备注说明：\n1.提现金额不小于100元.\n2.每笔提现需要收取提现金额5%作为手续费.\n3.提现需要先提交身份认证,身份信息需与支付宝账号实名信息一致.\n4.每月1号-5号打款,请您注意查收,如有问题请联系我们,客服QQ:2627765937."
                    android:textColor="@color/_95939E"
                    android:textSize="@dimen/_35px" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>