<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_2A273C"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_35px"
    android:paddingRight="@dimen/_35px">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45px"
        android:background="@color/_2A273C"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450px"
        android:background="@drawable/fill_bg_473053_yj"
        android:orientation="vertical">

        <TextView
            android:id="@+id/present_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_35px"
            android:layout_marginTop="@dimen/_45px"
            android:paddingLeft="@dimen/_10px"
            android:paddingRight="@dimen/_10px"
            android:text="今天 12:05"
            android:textColor="@color/_c9c9c9"
            android:textSize="@dimen/_35px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_100px"
            android:layout_marginRight="@dimen/_100px"
            android:layout_marginTop="@dimen/_35px">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/send_user_icon_iv"
                android:layout_width="@dimen/_150px"
                android:layout_height="@dimen/_150px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/head_man_test_icon" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/send_user_icon_iv2"
                android:layout_width="@dimen/_180px"
                android:layout_height="@dimen/_180px"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/head_man_test_icon"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_55px"
                android:layout_toRightOf="@id/send_user_icon_iv"
                android:paddingLeft="@dimen/_10px"
                android:paddingRight="@dimen/_10px"
                android:text="送"
                android:textColor="@color/_c9c9c9"
                android:textSize="@dimen/_40px" />

            <ImageView
                android:id="@+id/gift_iv"
                android:layout_width="@dimen/_120px"
                android:layout_height="@dimen/_120px"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/receive_user_icon"
                android:layout_width="@dimen/_150px"
                android:layout_height="@dimen/_150px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/head_man_test_icon" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/receive_user_icon2"
                android:layout_width="@dimen/_180px"
                android:layout_height="@dimen/_180px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/head_man_test_icon"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_55px"
                android:layout_toLeftOf="@id/receive_user_icon"
                android:paddingLeft="@dimen/_10px"
                android:paddingRight="@dimen/_10px"
                android:text="给"
                android:textColor="@color/_c9c9c9"
                android:textSize="@dimen/_40px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gift_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_15px"
                android:paddingLeft="@dimen/_10px"
                android:paddingRight="@dimen/_10px"
                android:text=""
                android:textColor="@color/_c9c9c9"
                android:textSize="@dimen/_38px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_100px"
            android:layout_marginRight="@dimen/_100px">

            <TextView
                android:id="@+id/send_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/_10px"
                android:paddingRight="@dimen/_10px"
                android:text="斯科特"
                android:textColor="@color/_c9c9c9"
                android:textSize="@dimen/_40px" />

            <TextView
                android:id="@+id/receive_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/_10px"
                android:paddingRight="@dimen/_10px"
                android:text="斯科特"
                android:textColor="@color/_c9c9c9"
                android:textSize="@dimen/_40px" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/white_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_666666"
        android:visibility="gone" />
</LinearLayout>