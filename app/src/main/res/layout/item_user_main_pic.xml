<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:id="@+id/divider_view"
        android:layout_width="@dimen/_45px"
        android:layout_height="match_parent"
        android:background="@color/_2A273C"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="@dimen/_250px"
        android:layout_height="@dimen/_250px">

        <com.ttt.qx.qxcall.widget.ZQImageViewRoundOval
            android:id="@+id/user_head_icon_iv"
            android:layout_width="@dimen/_250px"
            android:layout_height="@dimen/_250px"
             />

        <ImageView
            android:id="@+id/del_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/del_white_bg_del"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>