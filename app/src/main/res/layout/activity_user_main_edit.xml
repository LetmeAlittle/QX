<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_2A273C"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_ll"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150px"
            android:background="@drawable/app_top_title_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/top_back_rl"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/sex_select_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_35px"
                    android:src="@mipmap/top_back_iv" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑个人资料"
                    android:textColor="@color/_ffffff"
                    android:textSize="@dimen/_52px" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/more_rl"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/id_select_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_35px"
                    android:src="@mipmap/more_iv" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_100px"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/head_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px">


                        <TextView
                            android:id="@+id/head_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="头像"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/user_head_icon_iv"
                            android:layout_width="@dimen/_100px"
                            android:layout_height="@dimen/_100px"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_45px"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/head_tip"
                            android:src="@mipmap/user_default_icon" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56" />

                    <RelativeLayout
                        android:id="@+id/nick_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_40px">


                        <TextView
                            android:id="@+id/nick_name_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="昵称"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />

                        <TextView
                            android:id="@+id/user_nick_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/nick_name_tip"
                            android:text=""
                            android:textColor="@color/_a3a3a3"
                            android:textSize="@dimen/_40px" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30px"
                    android:background="@color/_3b3850" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45px"
                    android:layout_marginRight="@dimen/_45px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15px"
                        android:text="相册"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_38px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/_30px"
                        android:layout_marginTop="@dimen/_30px">

                        <ImageView
                            android:id="@+id/right_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/right_arrow_iv"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/user_img_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"></android.support.v7.widget.RecyclerView>

                    </RelativeLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30px"
                    android:background="@color/_3b3850" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_100px"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/yuyin_introduce_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_45px">


                        <TextView
                            android:id="@+id/yuyin_introduce_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="语音介绍"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />

                        <RelativeLayout
                            android:id="@+id/yuyin_time_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_60px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/yuyin_introduce_tip"
                            android:background="@drawable/fill_bg_f56eca_yj"
                            android:paddingLeft="@dimen/_15px"
                            android:paddingRight="@dimen/_15px"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/yun_yin_play_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/yuyin_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_35px"
                                android:layout_toRightOf="@id/yun_yin_play_iv"
                                android:text="10''"
                                android:textColor="@color/_ffffff"
                                android:textSize="@dimen/_40px" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/yuyin_introduce_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/yuyin_introduce_tip"
                            android:text="未添加"
                            android:textColor="@color/_a3a3a3"
                            android:textSize="@dimen/_40px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56" />

                    <RelativeLayout
                        android:id="@+id/sign_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_45px">


                        <TextView
                            android:id="@+id/sign_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="签名"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />


                        <TextView
                            android:id="@+id/sign_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/sign_tip"
                            android:text=""
                            android:textColor="@color/_a3a3a3"
                            android:textSize="@dimen/_40px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56" />

                    <RelativeLayout
                        android:id="@+id/sex_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_45px">


                        <TextView
                            android:id="@+id/sex_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="性别"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />


                        <TextView
                            android:id="@+id/sex_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/sex_tip"
                            android:text=""
                            android:textColor="@color/_a3a3a3"
                            android:textSize="@dimen/_40px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv"
                            android:visibility="invisible" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56" />

                    <RelativeLayout
                        android:id="@+id/label_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_45px">


                        <TextView
                            android:id="@+id/label_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="标签"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_40px" />


                        <ImageView
                            android:id="@+id/right_arrow_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                        <com.ttt.qx.qxcall.widget.FlowLayout
                            android:id="@+id/flow_tag_layout"
                            android:layout_marginRight="@dimen/_50px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/right_arrow_iv"
                            android:layout_toRightOf="@id/label_tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.ttt.qx.qxcall.widget.FlowLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56" />

                    <RelativeLayout
                        android:id="@+id/location_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_45px"
                        >


                        <TextView
                            android:id="@+id/location_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="地址"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />


                        <TextView
                            android:id="@+id/location_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/location_tip"
                            android:text="未添加"
                            android:textColor="@color/_a3a3a3"
                            android:textSize="@dimen/_40px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56"
                        />

                    <RelativeLayout
                        android:id="@+id/birthday_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_45px"
                        android:paddingRight="@dimen/_45px"
                        android:paddingTop="@dimen/_45px">


                        <TextView
                            android:id="@+id/birthday_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="生日"
                            android:textColor="@color/_ffffff"
                            android:textSize="@dimen/_45px" />


                        <TextView
                            android:id="@+id/birthday_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_45px"
                            android:layout_toRightOf="@id/birthday_tip"
                           android:text=""
                            android:textColor="@color/_a3a3a3"
                            android:textSize="@dimen/_40px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/right_arrow_iv" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1px"
                        android:background="@color/_403D56" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/layoutPlayAudio"
            android:layout_width="@dimen/_350px"
            android:layout_height="@dimen/_350px"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/nim_dialog_toast_bg"
            android:visibility="gone">

            <Chronometer
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/timer_default"
                android:textColor="@color/white"
                android:textSize="@dimen/_50px" />

            <LinearLayout
                android:id="@+id/timer_tip_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/_15px"
                android:gravity="center">

                <TextView
                    android:id="@+id/timer_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/recording_cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_35px" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/record_rl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500px"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/_ffffff"
            android:clickable="true">

            <ImageView
                android:id="@+id/audio_record_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:src="@drawable/nim_message_input_voice_normal" />

            <com.ttt.qx.qxcall.function.login.record.RecordButton
                android:id="@+id/btn_record"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_40px"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/nim_message_input_voice_normal"
                android:layout_centerInParent="true"
                android:background="@color/_0000" />

            <TextView
                android:id="@+id/close_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/_35px"
                android:text="关闭"
                android:textColor="@color/_333333"
                android:textSize="@dimen/_45px" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>