<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/record_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_40px">

    <ImageView
        android:id="@+id/record_dialog_img"
        android:layout_width="@dimen/_55px"
        android:layout_height="@dimen/_80px" />

    <Chronometer
        android:id="@+id/record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5px"
        android:textColor="@color/_ffffff"
        android:textSize="@dimen/_40px" />

    <TextView
        android:id="@+id/record_dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10px"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_40px" />

</LinearLayout>