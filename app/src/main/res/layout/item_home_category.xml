<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/_2A273C"
              android:orientation="vertical"
              android:paddingBottom="@dimen/_5px"
              android:paddingLeft="@dimen/_15px"
              android:paddingRight="@dimen/_15px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_510px"
        android:layout_marginTop="@dimen/_35px">

        <com.ttt.qx.qxcall.widget.ZQImageViewRoundOval
            android:id="@+id/user_head_icon_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_25px"
            android:layout_marginLeft="@dimen/_25px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_45px"
                android:layout_height="@dimen/_45px"
                android:src="@mipmap/home_call_white_bg"/>

            <TextView
                android:id="@+id/need_gold_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5px"
                android:text="20钻石/分钟"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_35px"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25px"
        android:layout_marginTop="@dimen/_5px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_nick_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="小萝莉"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_40px"/>

        <ImageView
            android:id="@+id/vip_flag_iv"
            android:layout_width="@dimen/_45px"
            android:layout_height="@dimen/_45px"
            android:background="@mipmap/vip_flag_iv"
            android:layout_toRightOf="@id/user_nick_name_tv"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_15px"

            />
        <TextView
            android:id="@+id/member_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15px"
            android:background="@drawable/fill_bg_db70eb_yj"
            android:paddingLeft="@dimen/_20px"
            android:paddingRight="@dimen/_20px"
            android:text="V1"
            android:visibility="gone"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_35px"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_25px"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sex_ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45px"
            android:background="@drawable/fill_bg_ff79a7_yj"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/sex_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px"/>

            <TextView
                android:id="@+id/age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10px"
                android:layout_marginRight="@dimen/_20px"
                android:gravity="center_vertical"
                android:text="18"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_35px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px"
            android:text=""
            android:textColor="@color/_b8bdc0"
            android:textSize="@dimen/_36px"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>