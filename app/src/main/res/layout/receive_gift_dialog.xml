<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_0000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/sounds_ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_160px"
        android:background="@drawable/fill_bg_666666_80_yj"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_head_icon_iv"
                android:layout_width="@dimen/_160px"
                android:layout_height="@dimen/_160px"
                android:layout_centerInParent="true"
                android:src="@mipmap/audio_iv" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_nick_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15px"
            android:layout_marginRight="@dimen/_25px"
            android:text="矛头缇萦"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_50px" />

        <ImageView
            android:id="@+id/gift_iv"
            android:layout_width="@dimen/_160px"
            android:layout_marginRight="@dimen/_35px"
            android:layout_height="@dimen/_160px"
            android:src="@mipmap/audio_iv" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15px"
        android:layout_marginRight="@dimen/_25px"
        android:text="X"
        android:textColor="@color/_C4AAFF"
        android:textSize="@dimen/_80px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/_C4AAFF"
        android:textSize="@dimen/_100px"
        android:textStyle="bold" />
</LinearLayout>