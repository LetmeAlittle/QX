<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/_2A273C"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px"
        android:background="@drawable/app_top_title_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/top_back_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/sex_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_35px"
                android:src="@mipmap/top_back_iv"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_52px"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/id_select_rl"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/id_select_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_35px"
                android:src="@mipmap/more_iv"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_60px"
                android:layout_marginTop="@dimen/_80px"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="@dimen/_375px"
                    android:layout_height="@dimen/_375px"
                    android:layout_centerHorizontal="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_head_icon_iv"
                        android:layout_width="@dimen/_375px"
                        android:layout_height="@dimen/_375px"
                        android:src="@mipmap/user_default_icon"/>

                    <TextView
                        android:id="@+id/member_level_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_15px"
                        android:background="@drawable/fill_bg_db70eb_yj"
                        android:paddingLeft="@dimen/_10px"
                        android:paddingRight="@dimen/_10px"
                        android:text=""
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_35px"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_25px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_nick_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/_6e6e6e"
                        android:textSize="@dimen/_45px"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_80px">

                <RelativeLayout
                    android:id="@+id/nick_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_35px"
                    android:paddingRight="@dimen/_35px"
                    android:paddingTop="@dimen/_35px">


                    <TextView
                        android:id="@+id/nick_name_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="昵称"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px"/>

                    <TextView
                        android:id="@+id/user_nick_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_50px"
                        android:layout_toRightOf="@id/nick_name_tip"
                        android:text=""
                        android:textColor="@color/_a3a3a3"
                        android:textSize="@dimen/_35px"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow_iv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1px"
                    android:layout_marginBottom="@dimen/_15px"
                    android:background="@color/_403D56"/>

                <RelativeLayout
                    android:id="@+id/sign_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_35px"
                    android:paddingRight="@dimen/_35px"
                    android:paddingTop="@dimen/_35px">


                    <TextView
                        android:id="@+id/sign_name_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="签名"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px"/>

                    <TextView
                        android:id="@+id/sign_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_50px"
                        android:layout_toRightOf="@id/sign_name_tip"
                        android:text=""
                        android:textColor="@color/_a3a3a3"
                        android:textSize="@dimen/_35px"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow_iv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1px"
                    android:layout_marginBottom="@dimen/_15px"
                    android:background="@color/_403D56"/>

                <RelativeLayout
                    android:id="@+id/sex_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_35px"
                    android:paddingRight="@dimen/_35px"
                    android:paddingTop="@dimen/_35px">


                    <TextView
                        android:id="@+id/sex_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px"/>

                    <TextView
                        android:id="@+id/sex_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_50px"
                        android:layout_toRightOf="@id/sex_tip"
                        android:text=""
                        android:textColor="@color/_a3a3a3"
                        android:textSize="@dimen/_35px"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow_iv"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1px"
                    android:layout_marginBottom="@dimen/_15px"
                    android:background="@color/_403D56"/>

                <RelativeLayout
                    android:id="@+id/label_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingBottom="@dimen/_35px"
                    android:paddingRight="@dimen/_35px"
                    android:paddingTop="@dimen/_35px">


                    <TextView
                        android:id="@+id/label_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="标签"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px"/>


                    <ImageView
                        android:id="@+id/right_arrow_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow_iv"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/tag_recycler_view"
                        android:layout_width="match_parent"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_50px"
                        android:layout_toLeftOf="@id/right_arrow_iv"
                        android:layout_toRightOf="@id/label_tip"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1px"
                    android:layout_marginBottom="@dimen/_15px"
                    android:background="@color/_403D56"/>

                <RelativeLayout
                    android:id="@+id/location_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_35px"
                    android:paddingRight="@dimen/_35px"
                    android:paddingTop="@dimen/_35px"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/location_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="位置"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_50px"
                        android:layout_toRightOf="@id/location_tip"
                        android:text=""
                        android:textColor="@color/_a3a3a3"
                        android:textSize="@dimen/_35px"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow_iv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1px"
                    android:layout_marginBottom="@dimen/_15px"
                    android:background="@color/_403D56"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/birthday_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_35px"
                    android:paddingRight="@dimen/_35px"
                    android:paddingTop="@dimen/_35px">


                    <TextView
                        android:id="@+id/birthday_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="生日"
                        android:textColor="@color/_ffffff"
                        android:textSize="@dimen/_40px"/>

                    <TextView
                        android:id="@+id/birthday_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_50px"
                        android:layout_toRightOf="@id/birthday_tip"
                        android:text=""
                        android:textColor="@color/_a3a3a3"
                        android:textSize="@dimen/_35px"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/right_arrow_iv"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1px"
                    android:layout_marginBottom="@dimen/_15px"
                    android:background="@color/_403D56"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>