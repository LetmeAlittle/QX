<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100px">

        <TextView
            android:id="@+id/get_verify_code_tv"
            android:layout_width="@dimen/_300px"
            android:layout_height="@dimen/_120px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/fill_bg_9b5ada_yj"
            android:gravity="center"
            android:paddingLeft="@dimen/_35px"
            android:paddingRight="@dimen/_35px"
            android:text="重新获取"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_45px" />

        <RelativeLayout
            android:id="@+id/verify_code_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120px"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_35px"
            android:layout_toLeftOf="@id/get_verify_code_tv"
            android:background="@drawable/fill_bg_f4f8f9_yj"
            android:padding="@dimen/_35px">

            <ImageView
                android:id="@+id/verify_code_clear_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/del_white_bg_del"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/verify_code_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/verify_code_iv" />

            <EditText
                android:id="@+id/verify_code_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/_35px"
                android:layout_marginRight="@dimen/_35px"
                android:layout_toLeftOf="@id/verify_code_clear_iv"
                android:layout_toRightOf="@id/verify_code_iv"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="@color/_576066"
                android:textColorHint="@color/_dbdfe1"
                android:textSize="@dimen/_45px" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_marginTop="@dimen/_35px"
        android:background="@drawable/fill_bg_f4f8f9_yj"
        android:padding="@dimen/_35px">

        <ImageView
            android:id="@+id/pwd_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/pwd_iv" />

        <ImageView
            android:id="@+id/pwd_clear_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/del_white_bg_del"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_35px"
            android:layout_marginRight="@dimen/_35px"
            android:layout_toLeftOf="@id/pwd_clear_iv"
            android:layout_toRightOf="@id/pwd_iv"
            android:background="@null"
            android:hint="输入密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/_576066"
            android:textColorHint="@color/_dbdfe1"
            android:textSize="@dimen/_45px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pwd_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_marginTop="@dimen/_35px"
        android:background="@drawable/fill_bg_f4f8f9_yj"
        android:padding="@dimen/_35px">

        <ImageView
            android:id="@+id/confirm_pwd_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/again_pwd_iv" />

        <ImageView
            android:id="@+id/confirm_pwd_clear_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/del_white_bg_del"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/failed_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_30px"
            android:layout_toLeftOf="@id/confirm_pwd_clear_iv"
            android:src="@mipmap/failed_iv"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/confirm_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_35px"
            android:layout_marginRight="@dimen/_35px"
            android:layout_toLeftOf="@id/failed_iv"
            android:layout_toRightOf="@id/confirm_pwd_iv"
            android:background="@null"
            android:hint="确认密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/_576066"
            android:textColorHint="@color/_dbdfe1"
            android:textSize="@dimen/_45px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/submit_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px"
        android:layout_marginTop="@dimen/_120px"
        android:background="@drawable/fill_bg_9b5ada_yj"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/_ffffff"
        android:textSize="@dimen/_55px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/have_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="@dimen/_60px"
            android:paddingTop="@dimen/_60px"
            android:text="已有账号"
            android:textColor="@color/_576066"
            android:textSize="@dimen/_40px" />

        <TextView
            android:id="@+id/forget_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="@dimen/_60px"
            android:paddingTop="@dimen/_60px"
            android:text="忘记密码"
            android:textColor="@color/_9b5ada"
            android:textSize="@dimen/_40px" />
    </RelativeLayout>
</LinearLayout>