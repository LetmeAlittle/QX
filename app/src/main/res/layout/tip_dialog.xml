<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fill_bg_f0f0f0_yj"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_60px"
    android:paddingRight="@dimen/_60px"
    android:paddingTop="@dimen/_60px">

    <TextView
        android:id="@+id/tip_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/_333333"
        android:textSize="@dimen/_38px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_60px">


        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_45px"
            android:text="@string/confirm_text"
            android:textColor="@color/_ff6bda"
            android:textSize="@dimen/_45px" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/confirm_tv"
            android:layout_marginRight="@dimen/_15px"
            android:padding="@dimen/_45px"
            android:text="@string/cancel_text"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_45px" />
    </RelativeLayout>
</LinearLayout>