<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/_201E30"
    android:paddingLeft="@dimen/_60px"
    android:paddingRight="@dimen/_60px"
    android:paddingTop="@dimen/_35px">

    <TextView
        android:id="@+id/commnet_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杰斯回复：挺好看的，妹子。"
        android:textColor="@color/_a5a5a5"
        android:textSize="@dimen/_35px" />

    <LinearLayout
        android:id="@+id/replay_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/current_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小妖"
            android:textColor="@color/_ff5050"
            android:textSize="@dimen/_35px" />

        <TextView
            android:id="@+id/replay_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复杰斯：挺好看的，妹子。"
            android:textColor="@color/_a5a5a5"
            android:textSize="@dimen/_35px" />
    </LinearLayout>
</LinearLayout>